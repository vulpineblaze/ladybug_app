<body>
<h1> Details page</h1>



 



<%if (auth) { %>

<div class="logout"><a href="/logout">logout</a>  </div>











  <div class="add_container">
    <h2>Edit this message</h2>
      <div class="add_left_col">
         <br> 
        Title  <br>
        Text

      </div>


      <div class="add_right_col">

        <form action="/planet_msg-<%= msg.guid %>" method="POST" >
          <button type="submit">Submit</button><br>
            <% if (msg.visible) { %> 
              <input type="checkbox" checked="<%= msg.visible %>" name="visible"><br>
            <% } else { %>
              <input type="checkbox"  name="visible"><br>
            <% } %>
            <input type="text" value="<%= msg.planet %>" name="planet"><br>
            <textarea name="text" cols="40" rows="5"><%= msg.text %></textarea>
        </form>

      </div>

    
  </div>








<% } else { %>

  <div ><a href="/auth/google">google</a>  </div>
  <div ><a href="/auth/github">github</a>  </div>

<% } %>








<script>
$('body').find('br').replaceWith("\n");
$('body').find('p').each(function() {

    $(this).replaceWith("<p>" + $(this).text().replace(/\n/g, '<p>') + "</p>");
});
</script>

